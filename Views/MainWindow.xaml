<Window x:Class="SupermarketTech.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SupermarketTech.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="{StaticResource WindowBackgroundGradient}"
        Title="Супермаркет цифровой техники" Height="700" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Background="#FFF">
            <TextBlock Text="Супермаркет цифровой техники" FontSize="20" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="{Binding CurrentUser.Login}" 
                                 Cursor="Hand" 
                                 FontWeight="Bold"
                                 Margin="10,0">
                    <TextBlock.InputBindings>
                        <MouseBinding MouseAction="LeftClick"
                                      Command="{Binding UserCommand}" />
                    </TextBlock.InputBindings>
                </TextBlock>
                <TextBlock Text=" | "/>
                <TextBlock Text="{Binding CurrentUser.Role}" Margin="5,0"/>
            </StackPanel>
        </DockPanel>

        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Каталог">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Категория"/>
                        <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" Margin="0,5"/>
                        <TextBlock Text="Поиск"/>
                        <TextBox Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                        <TextBlock Text="Мин. цена"/>
                        <TextBox Text="{Binding MinPrice, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                        <TextBlock Text="Макс. цена"/>
                        <TextBox Text="{Binding MaxPrice}" Margin="0,5"/>
                    </StackPanel>

                    <ScrollViewer Grid.Column="1">
                        <ItemsControl ItemsSource="{Binding Products}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#DDD" BorderThickness="1" Padding="8" Margin="6" Width="220">
                                        <StackPanel>
                                            <Image Source="{Binding ImagePath}" Height="120" Stretch="Uniform" />
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,6,0,0"/>
                                            <TextBlock Text="{Binding Price, StringFormat=C}" Foreground="#2E8B57"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
                                                <Button Content="В корзину" Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem x:Name="CartTab" Header="Корзина">
            </TabItem>

            <TabItem Header="Администрирование" Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisConverter}}">
                <local:AdminView x:Name="AdminViewControl"/>
            </TabItem>
        </TabControl>
        <materialDesign:Snackbar x:Name="CartSnackbar"
                             Grid.Row="1"
                             MessageQueue="{Binding SnackbarMessageQueue}"
                             Style="{StaticResource CompactSnackbarStyle}"
                             Panel.ZIndex="999"/>
    </Grid>
</Window>
