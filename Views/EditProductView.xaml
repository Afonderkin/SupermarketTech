<Window x:Class="SupermarketTech.Views.EditProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="{StaticResource WindowBackgroundGradient}"
        Title="Изменить товар" Height="580" Width="450" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Название"/>
            <TextBox Text="{Binding Product.Name}" Margin="0,5"/>
            <TextBlock Text="Категория"/>
            <TextBox Text="{Binding Product.Category}" Margin="0,5"/>
            <TextBlock Text="Цена"/>
            <TextBox Text="{Binding Product.Price}" Margin="0,5"/>
            <TextBlock Text="Количество"/>
            <TextBox Text="{Binding Product.Stock}" Margin="0,5"/>
            <TextBlock Text="Описание"/>
            <TextBox Text="{Binding Product.Description}" Margin="0,5" AcceptsReturn="True" Height="80"/>
            <TextBlock Text="Картинка:" VerticalAlignment="Center"/>
            <Button Content="Выбрать..." Command="{Binding SelectImageCommand}" Margin="5,0"/>
            <TextBlock Text="{Binding Product.ImageFileName}" VerticalAlignment="Center" Margin="5,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Сохранить" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Margin="0,0,5,0"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>